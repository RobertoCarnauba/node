{{#each erros}}
 <div class="alert alert-danger">{{texto}}</div>
{{else}} 

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagem/edit" method="POST">
             <input type="hidden" value="{{postagens._id}}" name="id">
            <label for="titulo">Titulo</label>
            <input type="text" class="form-control" name="titulo" value="{{postagens.titulo}}" required>
            <label for="slug">Slug:</label>
            <input type="text" class="form-control" name="slug" value="{{postagens.slug}}" required>
            <label for="descricao">Descricao:</label>
            <input type="text" class="form-control" name="descricao" value="{{postagens.descricao}}" required>
            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" class="form-control" id="" cols="6" rows="5" required>{{postagens.conteudo}}</textarea>
            <label for="categoria">categoria</label>
               <select name="categoria" class="custom-select">
                   {{!- As informações renderizada dentro do select, vindo de categorias --}}
                   {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                   {{else}}    
                    <option value="0">Nenhuma categoria Registrada</option>
                   {{/each}}
               </select>
            <button type="submit" class="btn btn-success mt-4">Editar postagem</button>
        </form>
    </div>
</div>