<h2>Lista de postagen:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagen</button></a>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
         <p>{{conteudo}}</p>
         <small>Data: {{data}}</small>
         <small>Categoria: {{categoria.nome}}</small><br>
         <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar postagen</button></a>
         <a href="/admin/postagem/deletar/{{_id}}"><button class="btn btn-danger mt-2">Deletar postagen</button></a>
    </div>
</div>    

{{else}}
 <p>Nenhuma postagen registrada</p>
{{/each}}