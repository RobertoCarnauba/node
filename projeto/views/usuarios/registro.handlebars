  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h3>Crie sua conta</h3>
        <form action="/usuarios/registro" method="post">
            <label for="nome">Nome:</label>
              <input type="text" name="nome" id="nome" class="form-control" required>
            <label for="email">E-mail:</label>
              <input type="email" name="email" id="email" class="form-control" required>
            <label for="senha">Senha:</label>
              <input type="password" name="senha" id="senha" class="form-control" required>
            <label for="senha2">Repita sua senha:</label>
              <input type="password" name="senha2" class="form-control" required>
            <button type="submit" class="btn btn-success mt-2">Criar conta</button>      
        </form>
    </div>
</div>